NODE_ENV=development
PORT=3002
FRONTEND_URL=http://localhost:5173

# Prisma / Database
DATABASE_URL=sqlserver://username:password@your-sql-host:1433;database=itdoku;encrypt=true;trustServerCertificate=false;
DEV_AUTH_ENABLED=true

# Azure Active Directory (optional für produktiven Betrieb)
AZURE_TENANT_ID=
AZURE_CLIENT_ID=

# Azure OpenAI (optional, wird für echte KI-Antworten benötigt)
AZURE_OPENAI_KEY=
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_DEPLOYMENT=gpt-4o-mini
AZURE_OPENAI_API_VERSION=2024-02-01

# Azure Storage (Dateiuploads)
AZURE_STORAGE_CONNECTION_STRING=
AZURE_STORAGE_CONTAINER_NAME=uploads

# GitHub Import (optional)
GITHUB_TOKEN=

# Automatisierungs- & Queue-Setup
AUTOMATION_QUEUE_AUTORUN=false
AUTOMATION_RUN_IMMEDIATE=true
AUTOMATION_QUEUE_PROVIDER=memory
AZURE_SERVICE_BUS_CONNECTION_STRING=
AZURE_SERVICE_BUS_QUEUE_NAME=

# Verschlüsselung
ENCRYPTION_MASTER_KEY=
